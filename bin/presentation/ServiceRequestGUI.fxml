<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ServiceViewGUIController">
	<children>
		<HBox minWidth="1100.0" prefHeight="650.0" prefWidth="1100.0" stylesheets="@new.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<VBox fx:id="vbSideBar" alignment="TOP_CENTER" minWidth="60.0" prefWidth="60.0" styleClass="side-bar">
					<children>
						<Button styleClass="menu-button">
							<graphic>
								<Region styleClass="menu-icon" />
							</graphic>
						</Button>
						<Region VBox.vgrow="ALWAYS" />
						<Button styleClass="menu-button">
							<graphic>
								<Region styleClass="menu-icon" />
							</graphic>
						</Button>
					</children>
					<padding>
						<Insets top="12.0" />
					</padding>
				</VBox>
				<VBox styleClass="main-container" HBox.hgrow="ALWAYS">
					<HBox alignment="CENTER_LEFT" styleClass="header">
						<HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
							<Label styleClass="header-title" text="Pedido McDonald's" />
						</HBox>
						<HBox alignment="CENTER_RIGHT" styleClass="user-info">
							<VBox alignment="TOP_RIGHT">
								<children>
									<Label fx:id="userNameLabel" styleClass="user-name" text="Juan Pérez" />
									<Label fx:id="balanceLabel" styleClass="balance-label" text=".$10,000" />
								</children>
							</VBox>
							<StackPane fx:id="avatarContainer" styleClass="avatar-container">
								<ImageView fx:id="profileImageView" fitHeight="36" fitWidth="36" preserveRatio="true" />
							</StackPane>
						</HBox>
					</HBox>
					<HBox spacing="16.0" VBox.vgrow="ALWAYS">
						<padding>
							<Insets left="16.0" right="16.0" top="16.0" />
						</padding>
						<VBox minWidth="672.0" spacing="16" HBox.hgrow="ALWAYS">
							<VBox>
								<Label styleClass="section-title" text="Seleccionar día y tipo de comida" />
								<HBox spacing="8" styleClass="button-group">
									<ToggleButton fx:id="btnMonday" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" selected="true" text="Lunes">
										<toggleGroup>
											<ToggleGroup fx:id="dayGroup" />
										</toggleGroup>
									</ToggleButton>
									<ToggleButton fx:id="btnTuesday" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" text="Martes" toggleGroup="$dayGroup" />
									<ToggleButton fx:id="btnWednesday" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" text="Miércoles" toggleGroup="$dayGroup" />
									<ToggleButton fx:id="btnThursday" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" text="Jueves" toggleGroup="$dayGroup" />
									<ToggleButton fx:id="btnFriday" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" text="Viernes" toggleGroup="$dayGroup" />
									<padding>
										<Insets top="16.0" />
									</padding>
								</HBox>
								<HBox spacing="8" styleClass="button-group">
									<ToggleButton fx:id="btnBreakfast" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" selected="true" text="Desayuno">
										<toggleGroup>
											<ToggleGroup fx:id="timegroup" />
										</toggleGroup>
									</ToggleButton>
									<ToggleButton fx:id="btnLunch" maxHeight="25.0" maxWidth="125.0" prefHeight="25.0" prefWidth="125.0" text="Almuerzo" toggleGroup="$timegroup" />
									<padding>
										<Insets top="8.0" />
									</padding>
								</HBox>
								<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="meals-grid-scroll" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
									<GridPane fx:id="mealsGrid" hgap="10" styleClass="meals-grid" vgap="10">
										<columnConstraints>
											<ColumnConstraints percentWidth="33.33" />
											<ColumnConstraints percentWidth="33.33" />
											<ColumnConstraints percentWidth="33.33" />
										</columnConstraints>
										<padding>
											<Insets top="16.0" />
										</padding>
									</GridPane>
								</ScrollPane>
							</VBox>
						</VBox>
						<VBox minWidth="320.0" prefWidth="320" styleClass="cart-container">
							<Label styleClass="section-title" text="Resumen del Pedido" />
							<VBox fx:id="cartItemsContainer" spacing="8">
							</VBox>
							<Region VBox.vgrow="ALWAYS" />
							<VBox styleClass="cart-summary">
								<HBox styleClass="summary-row">
									<Label text="Subtotal" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
									<Label fx:id="subtotalLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<HBox styleClass="summary-row">
									<Label text="IVA (17.5%)" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
									<Label fx:id="taxLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<HBox styleClass="total-row">
									<Label text="Total" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
									<Label fx:id="totalLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<Button fx:id="checkoutButton" maxWidth="Infinity" onAction="#handleCheckout" styleClass="checkout-button" text="Realizar Pedido" />
								<Button fx:id="clearCartButton" maxWidth="Infinity" styleClass="clear-cart-button" text="Vaciar Carrito" />
							</VBox>
						</VBox>
					</HBox>
				</VBox>
			</children>
		</HBox>
	</children>
</AnchorPane>