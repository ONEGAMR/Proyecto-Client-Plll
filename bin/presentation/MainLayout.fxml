<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<?import javafx.scene.control.Tooltip?>
<AnchorPane styleClass="root" stylesheets="@new.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainLayoutController">
   <children>
      <HBox fx:id="mainContainer" minWidth="1100.0" prefHeight="625.0" prefWidth="1100.0">
          <VBox fx:id="vbSideBar" alignment="TOP_CENTER" minWidth="70.0" prefWidth="70.0" styleClass="side-bar">
              <!-- App Logo -->
              <StackPane styleClass="app-logo">
                  <Region styleClass="menu-icon" />
              </StackPane>

              <!-- Buttons -->
              <Button fx:id="btServiceRequest" onAction="#handleServiceRequest" styleClass="menu-button">
                  <graphic>
                      <Region styleClass="meals-icon" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Servicios" />
                  </tooltip>
              </Button>

              <Button fx:id="btOpenBalance" onAction="#handleOpenBalance" styleClass="menu-button">
                  <graphic>
                      <Region styleClass="balance-icon" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Balance" />
                  </tooltip>
              </Button>

              <Button fx:id="btUpdateUser" onAction="#handleUpdateUser" styleClass="menu-button">
                  <graphic>
                      <Region styleClass="profile-icon" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Perfil" />
                  </tooltip>
              </Button>

              <Button fx:id="btOpenOrders" onAction="#handleOpenOrders" styleClass="menu-button">
                  <graphic>
                      <Region styleClass="orders-icon" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Pedidos" />
                  </tooltip>
              </Button>

              <Region VBox.vgrow="ALWAYS" />

              <Button fx:id="btLogOut" onAction="#handleLogOut" styleClass="menu-button">
                  <graphic>
                      <Region styleClass="logout-icon" />
                  </graphic>
                  <tooltip>
                      <Tooltip text="Salir" />
                  </tooltip>
              </Button>
          </VBox>
      
          <StackPane fx:id="contentArea" HBox.hgrow="ALWAYS" />
      </HBox>
   </children>
</AnchorPane>
