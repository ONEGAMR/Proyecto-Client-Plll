<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="625.0" prefWidth="1040.0" styleClass="root" stylesheets="@application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BalanceController">
	<children>
		<VBox prefWidth="600.0" spacing="0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<HBox alignment="CENTER" maxHeight="65.0" minHeight="65.0" prefHeight="65.0" styleClass="header">
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <children>
               <Label style="-fx-text-fill: white;" styleClass="header-title" stylesheets="@new.css" text="Informacion de recargas" textFill="WHITE">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Label>
            </children>
			</HBox>

			<VBox alignment="CENTER" fillWidth="false" styleClass="table-container" VBox.vgrow="ALWAYS">
				<TableView fx:id="tvRecharges" styleClass="modern-table" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="tcRechargeDate" minWidth="50.0" prefWidth="250.0" text="Fecha de recarga" />
						<TableColumn fx:id="tcAmount" prefWidth="250.0" text="Monto" />
					</columns>
					<placeholder>
						<Label fx:id="lbEmptyTableMessage" style="-fx-text-fill: #52525b;" text="No hay registros disponibles" />
					</placeholder>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
				</TableView>
            <VBox.margin>
               <Insets />
            </VBox.margin>
			</VBox>
		</VBox>
	</children>
</AnchorPane>
