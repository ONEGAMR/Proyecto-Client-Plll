<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ServiceViewGUIController">
	<children>
		<HBox minWidth="1040.0" prefHeight="650.0" prefWidth="1040.0" styleClass="root" stylesheets="@new.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
			<children>
				<VBox styleClass="main-container" HBox.hgrow="ALWAYS">
					<HBox alignment="CENTER_LEFT" maxHeight="65.0" minHeight="65.0" prefHeight="65.0" styleClass="header">
						<HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
							<Label styleClass="header-title" text="Sistema Prepago para Universidad Nacional">
                        <padding>
                           <Insets bottom="12.0" left="16.0" top="12.0" />
                        </padding></Label>
						</HBox>
						<HBox alignment="CENTER_RIGHT" styleClass="user-info">
							<VBox alignment="TOP_RIGHT">
								<children>
									<Label fx:id="userNameLabel" styleClass="user-name" text="0" />
									<Label fx:id="balanceLabel" styleClass="balance-label" text="0" />
								</children>
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
							</VBox>
							<StackPane fx:id="avatarContainer" styleClass="avatar-container">
								<ImageView fx:id="profileImageView" fitHeight="36" fitWidth="36" preserveRatio="true" />
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
							</StackPane>
                     <HBox.margin>
                        <Insets bottom="12.0" right="16.0" top="12.0" />
                     </HBox.margin>
						</HBox>
					</HBox>
					<HBox spacing="16.0" VBox.vgrow="ALWAYS">
						<padding>
							<Insets left="16.0" right="16.0" top="16.0" />
						</padding>
						<VBox minWidth="672.0" spacing="16" HBox.hgrow="ALWAYS">
							<VBox>
								<!-- Replace the first HBox containing day ToggleButtons with this -->
								<HBox spacing="8" styleClass="button-group">
									<ComboBox fx:id="dayComboBox" maxHeight="1.7976931348623157E308" prefWidth="200.0" promptText="Seleccionar día" styleClass="combo-box">
										<padding>
											<Insets top="16.0" />
										</padding>
									</ComboBox>
									<ToggleButton fx:id="btnBreakfast" maxHeight="1.7976931348623157E308" maxWidth="150.0" prefWidth="150.0" selected="true" text="Desayuno">
										<toggleGroup>
											<ToggleGroup fx:id="timegroup" />
										</toggleGroup>
                              <HBox.margin>
                                 <Insets left="15.0" />
                              </HBox.margin>
									</ToggleButton>
									<ToggleButton fx:id="btnLunch" maxHeight="1.7976931348623157E308" maxWidth="150.0" prefWidth="150.0" text="Almuerzo" toggleGroup="$timegroup" />
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
								</HBox>
								<ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="meals-grid-scroll" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
									<GridPane fx:id="mealsGrid" hgap="10" styleClass="meals-grid" vgap="10">
										<columnConstraints>
											<ColumnConstraints percentWidth="33.33" />
											<ColumnConstraints percentWidth="33.33" />
											<ColumnConstraints percentWidth="33.33" />
										</columnConstraints>
										<padding>
											<Insets top="16.0" />
										</padding>
									</GridPane>
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
								</ScrollPane>
							</VBox>
						</VBox>
						<VBox minWidth="320.0" prefWidth="320" styleClass="cart-container">
							<Label styleClass="section-title" text="Resumen del Pedido" />
							<VBox fx:id="cartItemsContainer" spacing="8">
							</VBox>
							<Region VBox.vgrow="ALWAYS" />
							<VBox styleClass="cart-summary">
								<HBox styleClass="summary-row">
									<Label text="Subtotal" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
                           <Label alignment="CENTER_RIGHT" layoutX="281.0" layoutY="10.0" text="₡" />
									<Label fx:id="subtotalLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<HBox styleClass="summary-row">
									<Label text="IVA (13%)" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
                           <Label alignment="CENTER_RIGHT" layoutX="281.0" layoutY="10.0" text="₡" />
									<Label fx:id="taxLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<HBox styleClass="total-row">
									<Label text="Total" HBox.hgrow="ALWAYS" />
									<HBox HBox.hgrow="ALWAYS" />
                           <Label alignment="CENTER_RIGHT" layoutX="280.0" layoutY="18.0" text="₡" />
									<Label fx:id="totalLabel" alignment="CENTER_RIGHT" text="0" HBox.hgrow="ALWAYS" />
								</HBox>
								<Button fx:id="checkoutButton" maxWidth="Infinity" onAction="#handleCheckout" styleClass="checkout-button" text="Realizar Pedido" />
								<Button fx:id="clearCartButton" maxWidth="Infinity" styleClass="clear-cart-button" text="Vaciar Carrito" />
							</VBox>
						</VBox>
					</HBox>
				</VBox>
			</children>
		</HBox>
	</children>
</AnchorPane>
